<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.air.bigearth.apps.system.mapper.extend.ResourceExtendMapper" >
  <resultMap id="BaseResultMap" type="org.air.bigearth.apps.system.domain.basic.Resource" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="TINYINT" />
    <result column="code" property="code" jdbcType="VARCHAR" />
    <result column="pid" property="pid" jdbcType="VARCHAR" />
    <result column="des" property="des" jdbcType="VARCHAR" />
    <result column="path" property="path" jdbcType="VARCHAR" />
    <result column="sort" property="sort" jdbcType="TINYINT" />
    <result column="menu_route" property="menuRoute" jdbcType="VARCHAR" />
  </resultMap>
  
  <select id="selectByResourceIds" resultMap="BaseResultMap" >
    select id, name, type, code, pid, des, sort,path,menu_route
    from apps_t_sys_resource
    where id in
    <foreach collection="resourceIds" open="(" close=")" separator="," item="resourceId">
    	#{resourceId,jdbcType=VARCHAR}
    </foreach>
  </select>
 
 <delete id="deleteByPath">
 	<bind name="path" value="'%' + code + '%'" />
	 	DELETE
	FROM
     apps_t_sys_resource
	WHERE
		path LIKE #{path}
 </delete>
 
 <select id="selectByCode" resultMap="BaseResultMap">
 <bind name="path" value="'%' + code + '%'" />
 	select id, name, type, code, pid, des, sort,path,menu_route
 	from apps_t_sys_resource
 	where path like #{path}
 </select>
 
 <select id="getIdByCode" resultMap="BaseResultMap">
 	select id,path from apps_t_sys_resource where code=#{code,jdbcType=VARCHAR}
 </select>
</mapper>